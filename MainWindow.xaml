<Window x:Class="HomeworkLab15.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeworkLab15"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Label Content="Focus Timer" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" FontSize="28" FontWeight="Bold"/>
        <TextBlock x:Name="Timer" Text="00:00" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="60" FontWeight="Bold"/>
        <Button x:Name="ButtonStart" Content="Старт" Grid.Column="1" Grid.Row="3" Width="130" Margin="0 0 150 0" Click="ButtonStart_Click"/>
        <Button x:Name="ResetButton" Content="Сброс" Grid.Column="1" Grid.Row="3" Width="130" Margin="150 0 0 0" Click="ResetButton_Click"/>
        <Label Content="Продолжительность: " Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 200 0" FontSize="18"/>
        <ComboBox x:Name="TimerSelect" Grid.Column="1" Grid.Row="4" Width="70" Height="30" Margin="50 0 0 0" SelectionChanged="TimerSelect_SelectionChanged" FontSize="18"/>
        <Label Content="мин." Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="200 0 0 0"/>

    </Grid>
</Window>
