<Window x:Class="lab15__Plesko.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab15__Plesko"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="?" FontSize="36"
                   Grid.Column="0"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
                   Grid.Column="1"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
                   Grid.Column="2"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
                   Grid.Column="3"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="0"
           Grid.Row="1"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="1"
           Grid.Row="1"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="2"
           Grid.Row="1"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="3"
           Grid.Row="1"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="0"
           Grid.Row="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="1"
           Grid.Row="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="2"
           Grid.Row="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="3"
           Grid.Row="2"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="0"
           Grid.Row="3"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="1"
           Grid.Row="3"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="2"
           Grid.Row="3"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="3"
           Grid.Row="3"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="0"
           Grid.Row="4"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="1"
           Grid.Row="4"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="2"
           Grid.Row="4"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock Text="?" FontSize="36"
           Grid.Column="3"
           Grid.Row="4"
           VerticalAlignment="Center"
           HorizontalAlignment="Center" MouseDown="TextBlock"/>
        <TextBlock x:Name="timerTick" Grid.Row="5"
                   Text="00:00"
                   Grid.ColumnSpan="4"
                   FontSize ="36"
                   HorizontalAlignment="Center" MouseDown="Timer_Click"/>
    </Grid>
</Window>
